<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">

  <servlet>
    <servlet-name>SignupServlet</servlet-name>
    <servlet-class>servlet.SignUpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignupServlet</servlet-name>
    <url-pattern>/signUp</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SignInServlet</servlet-name>
    <servlet-class>servlet.SignInServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignInServlet</servlet-name>
    <url-pattern>/signIn</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DisplaySeatServlet</servlet-name>
    <servlet-class>servlet.DisplaySeatServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DisplaySeatServlet</servlet-name>
    <url-pattern>/displaySeat</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>JJSServlet</servlet-name>
    <servlet-class>servlet.JJSServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>JJSServlet</servlet-name>
    <url-pattern>/displaySeat/jjs</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>MSSServlet</servlet-name>
    <servlet-class>servlet.MSSServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MSSServlet</servlet-name>
    <url-pattern>/displaySeat/mss</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>KsmartLoungeServlet</servlet-name>
    <servlet-class>servlet.KsmartLoungeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>KsmartLoungeServlet</servlet-name>
    <url-pattern>/displaySeat/KsmartLounge</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CheckMySeatServlet</servlet-name>
    <servlet-class>servlet.CheckMySeatServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CheckMySeatServlet</servlet-name>
    <url-pattern>/checkMySeat</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ChooseOptionServlet</servlet-name>
    <servlet-class>servlet.ChooseOptionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ChooseOptionServlet</servlet-name>
    <url-pattern>/chooseOption</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RentedSeatServlet</servlet-name>
    <servlet-class>servlet.RentedSeatServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RentedSeatServlet</servlet-name>
    <url-pattern>/rentedSeat</url-pattern>
  </servlet-mapping>

  <listener>
    <listener-class>res.AppContextListener</listener-class>
  </listener>

</web-app>
